{
  "Checkbox": {
    "icon": {
      "selected": {
        "$type": "color",
        "$value": "{system.icon.on-container-color.inverse}"
      }
    },
    "size": {
      "small": {
        "$type": "number",
        "$value": "{system.dimension.size.2xs}"
      },
      "large": {
        "$type": "number",
        "$value": "{system.dimension.size.xs}"
      }
    },
    "border": {
      "color": {
        "inactive": {
          "$type": "color",
          "$value": "{component.border.selector-color.outline.inactive}"
        },
        "default": {
          "$type": "color",
          "$value": "{component.border.selector-color.outline.default}"
        },
        "selected": {
          "$type": "color",
          "$value": "{component.border.selector-color.filled.selected}"
        }
      },
      "width": {
        "$type": "number",
        "$value": "{system.border.width.sm}"
      },
      "radius": {
        "$type": "number",
        "$value": "{system.border.radius.md}"
      }
    },
    "spacing": {
      "gap": {
        "small": {
          "$type": "number",
          "$value": "{system.dimension.gap.3xs}"
        },
        "large": {
          "$type": "number",
          "$value": "{system.dimension.gap.2xs}"
        }
      },
      "padding": {
        "small": {
          "$type": "number",
          "$value": "{system.dimension.gap.5xs}"
        },
        "large": {
          "$type": "number",
          "$value": "{system.dimension.gap.4xs}"
        }
      }
    },
    "background": {
      "default": {
        "$type": "color",
        "$value": "{component.background.selector-color.outline.default}"
      },
      "pressed": {
        "$type": "color",
        "$value": "{component.background.selector-color.outline.pressed}"
      },
      "selected": {
        "$type": "color",
        "$value": "{component.background.selector-color.filled.selected}"
      }
    }
  }
}
